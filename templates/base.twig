<!DOCTYPE html>
<html>
	<head>
    {% block head %}
      <meta charset="utf-8">
      <meta http-equiv="X-UA-Compatible" content="IE=edge">
      <meta name="viewport" content="width=device-width, initial-scale=1, user-scalable=no">
      <link rel="icon" type="image/png" href="static/img/favicon.png" sizes="32x32">
      <link rel="apple-touch-icon" href="static/img/apple-touch-icon.png">
      <title>{% block title %}{% endblock %} | {{ pagename }}</title>
      {% block styles %}
      <link rel="stylesheet" href="{{ theme }}">
      <link rel="stylesheet" href="vendor/components/font-awesome/css/all.min.css">
      <link rel="stylesheet" href="static/bootstrap-datepicker/css/bootstrap-datepicker3.min.css">
      <link rel="stylesheet" href="static/css/styles.css">
      {% endblock %}
      {% block scripts %}
        <script src="vendor/components/jquery/jquery.min.js"></script>
        <script src="vendor/twbs/bootstrap/dist/js/bootstrap.min.js"></script>
      {% endblock %}
    {% endblock %}
	</head>
	<body>
    {% block nav %}
      <nav class="navbar navbar-expand-md navbar-dark bg-dark" style="z-index: 1001">
        {% if brand_logo %}
          <div class="navbar-brand">
            <img src="{{ brand_logo }}" style="height: {{ brand_logo_height }}px;">
          </div>
        {% else %}
          <a class="navbar-brand d-inline d-md-none" data-toggle="collapse" data-target="#navbar-collapse" href="#">{{ block('title') }}</a>
        {% endif %}
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbar-collapse" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbar-collapse">
          <ul class="navbar-nav mr-auto">
            <li class="nav-item {% if page_active == 'index' %}active{% endif %}"><a href="?page=index" class='nav-link'><i class="far fa-envelope fa-fw"></i>&nbsp;{% trans %}nav.messages{% endtrans %}</a></li>
            {% if feature_stats %}
              <li class="nav-item {% if page_active == 'stats' %}active{% endif %}"><a href="?page=stats" class='nav-link'><i class="fa fa-chart-area fa-fw"></i>&nbsp;{% trans %}nav.statistics{% endtrans %}</a></li>
            {% endif %}
          </ul>
          <ul class="navbar-nav">
            <span class='navbar-text'><i class="fa fa-user fa-fw"></i>&nbsp;{{ username }}</span>
            <li class='nav-item'><a href="?page=logout" class='nav-link'><i class="fa fa-sign-out-alt fa-fw"></i>&nbsp;{% trans %}nav.signout{% endtrans %}</a></li>
          </ul>
        </div>
      </nav>
    {% endblock %}
    {% block body %}
    {% endblock %}
  </body>
</html>
